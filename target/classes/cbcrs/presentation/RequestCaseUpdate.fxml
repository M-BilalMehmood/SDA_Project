<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cbcrs.presentation.controllers.RequestCaseUpdateController"
      spacing="10"
      alignment="CENTER">

    <Label text="Do you want to request a case update?" style="-fx-font-size: 16px;"/>

    <HBox spacing="10">
        <Button fx:id="yesButton" text="Yes" onAction="#handleYes"/>
        <Button fx:id="noButton" text="No" onAction="#handleNo"/>
    </HBox>

</VBox>