<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cbcrs.presentation.controllers.LoginController"
            prefHeight="890.0" prefWidth="460.0"
            style="-fx-background-color: #f4f4f4;">

    <VBox alignment="CENTER" spacing="20" layoutX="23.0" layoutY="164.0" prefHeight="562.0" prefWidth="414.0">
        <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@logo.png"/>
        </ImageView>
        <Label text="Community Based Crime Reporting System"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;">
        </Label>
        <TextField fx:id="usernameField" promptText="Username"
                   style="-fx-background-radius: 20px; -fx-padding: 10px;">
        </TextField>
        <PasswordField fx:id="passwordField" promptText="Password"
                       style="-fx-background-radius: 20px; -fx-padding: 10px;">
        </PasswordField>
        <Button text="Login" onAction="#handleLoginButton"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 20px; -fx-padding: 10px 20px; -fx-font-size: 16px;">
        </Button>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Don't have an account?" style="-fx-font-size: 14px;">
            </Label>
            <Button text="Sign Up" onAction="#handleSignUpButton"
                    style="-fx-background-color: transparent; -fx-text-fill: #007bff; -fx-underline: true; -fx-font-size: 14px;">
            </Button>
        </HBox>
    </VBox>
</AnchorPane>