<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cbcrs.presentation.controllers.RegisterController"
            prefHeight="890.0" prefWidth="460.0"
            style="-fx-background-color: #f4f4f4;">

    <VBox alignment="CENTER" spacing="20" layoutX="23.0" layoutY="164.0" prefHeight="562.0" prefWidth="414.0">
        <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@logo.png"/>
        </ImageView>
        <Label text="Community Based Crime Reporting System"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;">
        </Label>
        <TextField fx:id="usernameField" promptText="Username"
                   style="-fx-background-radius: 20px; -fx-padding: 10px;">
        </TextField>
        <PasswordField fx:id="confirmPasswordField" promptText="Password"
                       style="-fx-background-radius: 20px; -fx-padding: 10px;">
        </PasswordField>
        <TextField fx:id="emailField" promptText="Email"
                   style="-fx-background-radius: 20px; -fx-padding: 10px;">
        </TextField>
        <TextField fx:id="phoneField" promptText="Phone Number"
                   style="-fx-background-radius: 20px; -fx-padding: 10px;">
        </TextField>
        <HBox alignment="CENTER" spacing="20">
            <Button text="Register" onAction="#handleRegisterButton"
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 20px; -fx-padding: 10px 20px; -fx-font-size: 16px;">
            </Button>
            <Button text="Cancel" onAction="#handleCancelButton"
                    style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 20px; -fx-padding: 10px 20px; -fx-font-size: 16px;">
            </Button>
        </HBox>
    </VBox>
</AnchorPane>